<h1>ためんちゃん　みんなのハイスコア</h1>

<div id="easy">

<h2>初級</h2>

<table class="hiscoretable">
  <tr>
    <th class="rank">順位</th>
    <th class="name">名前</th>
    <th class="score">得点</th>
    <th class="date">日付</th>
  </tr>

<% @hiscores_easy.each do |hiscore| %>
  <tr>
    <td class="rank"><%= hiscore.rank %>位</td>
    <td class="name"><%= hiscore.name %></td>
    <td class="score"><%= hiscore.score %>点</td>
    <td class="date"><%= hiscore.achieved_date.localtime.strftime('%Y/%m/%d') %></td>
  </tr>
<% end %>
</table>

</div>

